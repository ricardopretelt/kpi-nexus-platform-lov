# .env.example - Template for environment variables
# Copy this to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_HOST=localhost
DB_USER=username
DB_PASSWORD=password
DB_NAME=database_name
DB_PORT=5432

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters
SESSION_SECRET=your-session-secret-here-minimum-32-characters

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_PORT=8080

# File Uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000,http://localhost:5173,http://frontend:8080,http://your-server-ip:8080,http://your-server-ip:3000

# External APIs
ANALYTICS_API_KEY=your_analytics_api_key_here
EMAIL_SERVICE_KEY=your_email_service_key_here